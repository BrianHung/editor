{
  "name": "editor",
  "version": "1.0.0",
  "description": "a rich text editor built upon ProseMirror",
  "author": {
    "name": "Brian Hung",
    "email": "brianlhung@gmail.com"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "rm -r -f dist/ && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module es2020   --outDir dist/esm && copyfiles -u 1 src/**/*.css src/**/*.svg dist/cjs",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && copyfiles -u 1 src/**/*.css src/**/*.svg dist/esm",
    "dev": "vite --host",
    "build:website": "vite build"
  },
  "dependencies": {
    "@codemirror/highlight": "^0.19.6",
    "@codemirror/language": "^0.19.3",
    "@codemirror/language-data": "^0.19.0",
    "emoji-regex": "^10.0.0",
    "katex": "^0.13.18",
    "linkify-it": "^3.0.2",
    "prosemirror-commands": "^1.1.10",
    "prosemirror-dropcursor": "^1.3.5",
    "prosemirror-gapcursor": "^1.2.0",
    "prosemirror-history": "^1.2.0",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-markdown": "^1.6.0",
    "prosemirror-model": "^1.14.3",
    "prosemirror-schema-list": "^1.1.6",
    "prosemirror-state": "^1.3.4",
    "prosemirror-tables": "^1.1.1",
    "prosemirror-view": "^1.20.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@types/katex": "^0.11.1",
    "@types/prosemirror-commands": "^1.0.4",
    "@types/prosemirror-dropcursor": "^1.0.3",
    "@types/prosemirror-gapcursor": "^1.0.4",
    "@types/prosemirror-history": "^1.0.3",
    "@types/prosemirror-inputrules": "^1.0.4",
    "@types/prosemirror-keymap": "^1.0.4",
    "@types/prosemirror-markdown": "^1.5.2",
    "@types/prosemirror-model": "^1.13.2",
    "@types/prosemirror-schema-list": "^1.0.3",
    "@types/prosemirror-state": "^1.2.7",
    "@types/prosemirror-view": "^1.19.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "copyfiles": "^2.4.1",
    "gulp": "^4.0.2",
    "gulp-svg-sprite": "^1.5.0",
    "prosemirror-dev-tools": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3",
    "vite": "^2.6.2"
  }
}
